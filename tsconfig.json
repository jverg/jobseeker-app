{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@assets/*": ["public/assets/*"],
      "@hooks/*": ["hooks/*"],
      "@models/*": ["models/*"],
      "@mocks/*": ["mocks/*"],
      "@contexts/*": ["contexts/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": ["next-env.d.ts", "externals.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}